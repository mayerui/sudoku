{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure",
      "type": "shell",
      "command": "cmake -S . -B build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "cmake --build build",
      "group": "build",
      "dependsOn": "CMake: configure",
      "problemMatcher": []
    },
    {
      "label": "CMake: clean",
      "type": "shell",
      "command": "cmake --build build --target clean",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "CMake: configure & build",
      "dependsOn": [
        "CMake: configure",
        "CMake: build"
      ],
    }
  ]
}